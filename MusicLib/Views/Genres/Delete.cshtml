@model MusicLib.BLL.DTO.GenreDTO

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление клуба</h2>

<h3>Вы действительно хотите удалить клуб?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.Label("Название клуба:")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Тренер:")
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку клубов</a>
    </form>
</div>

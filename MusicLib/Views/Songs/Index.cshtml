@model IEnumerable<MusicLib.BLL.DTO.SongDTO>

@{
    ViewBag.Title = "Index";
}

<h2>List of Songs</h2>

<p>
    <a asp-action="Create">Add a new Song</a>
</p>
<table class="table-condensed" style="width:100%">
    <tr>
        <th>Song</th>
        <th>Release</th>
        <th>Genre</th>
        <th>Artist</th>
        <th>Video</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Release)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Video)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Detailes</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
</table>
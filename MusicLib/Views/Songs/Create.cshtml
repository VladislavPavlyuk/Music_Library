@model MusicLib.BLL.DTO.SongDTO

@{
    ViewBag.Title = "Create";
}

<h2>Add a new Song</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.Label("Song:")
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Label("Release:")
                <input asp-for="Release" class="form-control" />
                <span asp-validation-for="Release" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.Label("Genre:")
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.ListGenres as SelectList"></select>
            </div>

            <div class="form-group">
                @Html.Label("Artist:")
                <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ListArtists as SelectList"></select>
            </div>
            <div class="form-group">
                @Html.Label("Video:")
                <select asp-for="VideoId" class="form-control" asp-items="ViewBag.ListVideos as SelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
